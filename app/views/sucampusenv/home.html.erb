
<div class="jumbotron">
  <h1>AIT Student Union Campus and Environment</h1>
  <p class="lead">Welcome !!!</p>
</div>

<!-- Example row of columns -->
<div class="row">
  <div class="col-lg-4">
    <h2>News Articles</h2>
    <% @allarticles.each do |article| %>
        <p> <%= link_to article.title, article_path(article) %> </p>
    <% end %>
  </div>

  <div class="col-lg-4">
    <h2>Happening Soon !!!</h2>
    <% @allevents.each do |event| %>
        <p> <%= link_to event.title, event_path(event) %>  <%= link_to "Register", new_event_participation_path(event),class: "btn btn-success" %> </p>
    <% end %>
  </div>

  <div class="col-lg-4">
    <h2>Quote of the day</h2>
    <p>The future will either be green or not at all. <b>-Bob Brown</b></p>
  </div>
</div>
